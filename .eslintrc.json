{
  "plugins": ["simple-import-sort", "mocha"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "strongloop",
    "plugin:mocha/recommended"
  ],
  "rules": {
    "max-len": [2, 120],
    "simple-import-sort/imports": "error",
    "semi": 0
  }
}
